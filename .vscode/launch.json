// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			// "preLaunchTask": "npm: compile", // commented this because it was slow, I will do it manually
			"internalConsoleOptions": "neverOpen",
			"env": {
				"APPDATA": "C:\\Users\\devee\\AppData\\Roaming",
				"XDG_CONFIG_HOME": "/home/user/.config",
				"LOG_LEVEL": "info",
				"LOG_TO_CONSOLE": "true",
				"SHOW_POPUPS": "true",
				"NODE_ENV": "development",
				"ENABLE_CHAT_WEBVIEW": "true",
				"ENABLE_SIDEBAR": "false",
				"ENABLE_LOGGING": "false",
				"ENABLE_INTERCEPTOR": "false"
			}
		},
		{
			"name": "Debug Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index.js"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: compile",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"APPDATA": "C:\\Users\\devee\\AppData\\Roaming",
				"XDG_CONFIG_HOME": "/home/user/.config",
				"LOG_LEVEL": "info",
				"LOG_TO_CONSOLE": "true",
				"SHOW_POPUPS": "true",
				"NODE_ENV": "development",
				"ENABLE_CHAT_WEBVIEW": "true",
				"ENABLE_SIDEBAR": "false",
				"ENABLE_LOGGING": "false",
				"ENABLE_INTERCEPTOR": "false"
			}
		}
	]
}
