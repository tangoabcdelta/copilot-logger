{
  "name": "copilot-logger",
  "displayName": "Copilot Logger",
  "description": "Logs Copilot interactions (inputs and outputs) into a file for auditing purposes.",
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-logger.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "copilot-logger.createLogResources",
        "title": "Copilot Logger: Create Log Resources"
      },
      {
        "command": "copilot-logger.importChatSessions",
        "title": "Copilot Logger: Import Chat Sessions"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotLoggerSidebar",
          "title": "Copilot Logger",
          "icon": "media/kawaii-logo.svg"
        }
      ]
    },
    "views": {
      "copilotLoggerSidebar": [
        {
          "id": "copilotLoggerView",
          "name": "Logger View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run prepackage",
    "prepackage": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "prepackage-version-check": "node tools/version-check.js",
    "package": "npm run prepackage-version-check && vsce package",
    "only:package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/copilot-logger.git"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
